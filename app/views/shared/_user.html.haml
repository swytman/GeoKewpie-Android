%ul.nav.navbar-nav.navbar-right.right50
  - if user_signed_in?
    %li{style: 'min-width: 167px'}
      %a{href: '#'}
        = current_user.email
    %li
      %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' } }
        %span.glyphicon.glyphicon-user
        %span.caret
      %ul.dropdown-menu
        %li= link_to '<span class="hidden-user glyphicon glyphicon-log-out"></span> Выход'.html_safe,
          destroy_user_session_path, method: :delete
  - else
    %li{style: 'min-width: 167px'}
      = link_to  'Вход', new_user_session_path, class: 'pull-right'





