= form_for TeamLogo.new, :url => team_logos_path, html:  { multipart: true } do |f|
  .row
    .btn-file-area
      %span.btn.btn-file.btn-success
        Добавить эмблему
        .glyphicon.glyphicon-plus
        %input{type: 'file', multiple:true, name: 'team_logo[logo]'}

- logos = TeamLogo.all
- if logos.count > 0
  .row.top40
    - logos.each do |logo|
      .col-xs-2.logo
        %a.thumbnail{href: '#'}
          = image_tag logo.logo.url(:standart)
        %p.text-center
          = link_to 'Удалить', team_logo_path(logo), method: 'delete'