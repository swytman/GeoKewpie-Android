!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Зеленоградский футбол'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Greenfootball'}"}
    = stylesheet_link_tag "application", media: "all"
    = favicon_link_tag '/ball-green.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"

    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    .container
      .row
        .col-sm-2#left-menu
          = render 'layouts/left_menu'
        .col-sm-7#main-container
          = render 'layouts/messages'
          = yield
        .col-sm-3
          = render 'layouts/tables'
