      = render 'layouts/navigation'
    .container
      .row
        .col-sm-2#left-menu
          = render 'layouts/left_menu'
        .col-sm-7#main-container
          = render 'layouts/messages'
          = yield
        .col-sm-3
          = render 'layouts/tables'
